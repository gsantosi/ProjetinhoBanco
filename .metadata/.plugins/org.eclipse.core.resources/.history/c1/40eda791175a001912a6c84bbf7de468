package Arquivo;

import java.io.File;
import java.util.Scanner;

public class ArquivoClass {
   public static void main (String[] args) {
	   
	   Scanner e = new Scanner(System.in);

	   File file = new File("C:\\Users\\gsantosi\\Desktop\\Guilherme (Indra)\\texte.txt");
	   
	   System.out.println("Nome do seu arquivo: "+ file.getName());
	   System.out.println("Endereço básico: " + file.getParent());
	   System.out.println("Endereço completo dos arquivos:" + file.getPath());
	   System.out.println("Teste: " + file.);

   e.close();
   }
}
