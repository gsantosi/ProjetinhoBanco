package InterfacesFixação;

public class ControlePagamento {
	
	// CLASSE SÓ PARA ARMAZENAR OS DADOS DE OUTRA CLASSE.

	public double pagamentobase;
	public double taxa;

	public ControlePagamento(double pagamentobase, double taxa) {

		this.pagamentobase = pagamentobase;
		this.taxa = taxa;
	}

	public double getPagamentobase() {
		return pagamentobase;
	}

	public double getTaxa() {
		return taxa;
	}
	
	public void setPaagamentobase (double pagamentobase) {
		this.pagamentobase = pagamentobase;
	}
	
	public void setTaxa(double taxa) {
		this.taxa = taxa;
	}
	
	public void TotalPagamento() {
		this.getPagamentobase() + getTaxa();
	}

}
